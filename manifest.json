{
  "manifest_version": 3,
  "name": "Bilibili 黑名单增强助手",
  "version": "2.0",
  "description": "读取黑名单，并在页面上提供快速拉黑和用户信息分析功能。",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    },
    "default_title": "Bilibili 黑名单增强助手",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "declarativeNetRequest",
    "scripting"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "exclude_matches": ["*://www.bilibili.com/video/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
